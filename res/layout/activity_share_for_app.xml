<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="分享"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/split" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="4" >

        <TextView
            android:id="@+id/share_sina_weibo"
            style="@style/text_menu_sub_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:drawableTop="@drawable/sina_weibo_icon"
            android:gravity="center"
            android:text="新浪微博" />

        <TextView
            android:id="@+id/share_friend_circle"
            style="@style/text_menu_sub_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:drawableTop="@drawable/wx_circle_icon"
            android:gravity="center"
            android:text="朋友圈" />

        <TextView
            android:id="@+id/share_weixin"
            style="@style/text_menu_sub_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:drawableTop="@drawable/wx_friend_icon"
            android:gravity="center"
            android:text="微信好友" />

        <TextView
            android:id="@+id/shared_qq_qzone"
            style="@style/text_menu_sub_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:drawableTop="@drawable/qzone_icon"
            android:gravity="center"
            android:text="QQ空间" />
    </LinearLayout>

</LinearLayout>